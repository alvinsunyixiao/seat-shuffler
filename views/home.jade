extends layout

block content
  h1(style="position: absolute; top: 4%;") 座位表
  form(action="/home/password",method="post")
    input#passwordchange(type="submit",value="改密码")
  div(class="seats")
    - var i = 0
    each name in namelist
      if (i>=0 && i<=7)
        div(name = i,class="left")
          if nametag==name
            a(style="color: #7C5ABB")=name
          else
            a(href="/home/change/"+name,style=highlights[i])=name
      else if (i>=8 && i<=16)
        div(name = i,class = "back")
          if nametag==name
            a(style="color: #7C5ABB")=name
          else
            a(href="/home/change/"+name,style=highlights[i])=name
      else if (i>=17 && i<=24)
        div(name = i,class = "right")
          if nametag==name
            a(style="color: #7C5ABB")=name
          else
            a(href="/home/change/"+name,style=highlights[i])=name
      else if (i>=25 && i<=31)
        div(name = i,class = "middle")
          if nametag==name
            a(style="color: #7C5ABB")=name
          else
            a(href="/home/change/"+name,style=highlights[i])=name
      else if (i>=32 && i<=38)
        div(name = i,class = "front")
          if nametag==name
            a(style="color: #7C5ABB")=name
          else
            a(href="/home/change/"+name,style=highlights[i])=name
      - i = i + 1
    script(src="/javascripts/highlight.js")
    form(action="/home/logout",method="post")
      button() logout
