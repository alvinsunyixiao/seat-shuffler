extends layout

block content
  h1(style="position: absolute; top: 4%;") 座位表
  div(class="seats")
    - var i = 0
    each name in namelist
      if (i>=0 && i<=7)
        div(name = i,class="left")
          a=name
      else if (i>=8 && i<=16)
        div(name = i,class = "back")
          a=name
      else if (i>=17 && i<=24)
        div(name = i,class = "right")
          a=name
      else if (i>=25 && i<=31)
        div(name = i,class = "middle")
          a=name
      else if (i>=32 && i<=38)
        div(name = i,class = "front")
          a=name
      - i = i + 1
