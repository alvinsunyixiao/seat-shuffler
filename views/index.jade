extends layout

block content
	div(class="container-fluid")
		div(class="row myheader",style="text-align:center")
			h1 Login Page
		form(action="/login",method="post",accept-charset="utf-8",class="form-horizontal")
			p(style=noUser,class="warning-text") 用户名或密码不正确
			div(class="form-group row")
				label(for="usrname",class="control-label col-md-1 col-md-offset-3") 用户名
				div(class="col-md-4")
					input(type="text",name="name",placeholder="用户名",class="form-control",id="usrname")
			div(class="form-group row")
				label(for="passwd",class="control-label col-md-1 col-md-offset-3") 密码
				div(class="col-md-4")
					input(type="password",name="pass",placeholder="密码",class="form-control",id="passwd")
			button(type="submit",class="btn btn-default col-md-2 col-md-offset-5") 登录
