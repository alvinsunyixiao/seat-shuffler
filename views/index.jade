extends layout

block content
	meta(name="viewport" content="width=device-width, initial-scale=1")
	div(class="container-fluid")
		div(class="row myheader",style="text-align:center")
			h1 Login Page
		form(action="/login",method="post",accept-charset="utf-8",class="form-horizontal loginlist")
			div(class="alert alert-danger alert-dismissible form-group myalert" role="alert",style=noUser)
				button(type="button" class="close" data-dismiss="alert" aria-label="Close")
					span(aria-hidden="true") &times;
				p 用户名或密码不正确
			div(class="form-group row")
				label(for="usrname",class="control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1 col-xs-9 col-xs-offset-1") 用户名
				div(class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1")
					input(type="text",name="name",placeholder="用户名",class="form-control",id="usrname")
			div(class="form-group row")
				label(for="passwd",class="control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1 col-xs-9 col-xs-offset-1") 密码
				div(class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1")
					input(type="password",name="pass",placeholder="密码",class="form-control",id="passwd")
			div(class="form-group row")
				div(class="col-md-offset-5 col-sm-offset-5 col-xs-offset-4")
					button(type="submit",class="btn btn-default loginbtn",class="col-md-3 col-sm-3 col-xs-5") 登录
